@model IEnumerable<UrunSatis.Models.Product>

<h1>Ürün Listesi</h1>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Ad</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.StockQuantity</td>
                <td>
                    <!-- Düzenleme ve Silme işlemleri -->
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Sil</a>

                    <!-- Sepete ekleme butonu -->
                    <a asp-action="AddToCart" asp-route-productId="@product.Id" class="btn btn-success btn-sm">Sepete Ekle</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Yeni Ürün Ekle</a>
